{
  "description": "Create an Amazon Machine Image (AMI)",
  "schemaVersion": "0.3",
  "assumeRole": "{{ AutomationAssumeRole }}",
  "parameters": {
    "InstanceId": {
      "type": "String",
      "description": "(Required) The ID of the Amazon EC2 instance."
    },
    "LambdaAssumeRole": {
      "type": "String",
      "description": "(Optional) The ARN of the role assumed by lambda",
      "default": ""
    },
    "AutomationAssumeRole": {
      "type": "String",
      "description": "(Optional) The ARN of the role that allows Automation to perform the actions on your behalf. ",
      "default": ""
    }
  },
  "mainSteps": [
    {
      "name": "createDocumentStack",
      "action": "aws:createStack",
      "inputs": {
        "Capabilities": [
          "CAPABILITY_IAM"
        ],
        "StackName": "CreateImageStack{{automation:EXECUTION_ID}}",
        "Parameters": [
          {
            "ParameterKey": "LambdaRoleArn",
            "ParameterValue": "{{LambdaAssumeRole}}"
          },
          {
            "ParameterKey": "LambdaName",
            "ParameterValue": "CreateImageLambda-{{automation:EXECUTION_ID}}"
          }
        ],
        "TemplateBody": "..."
      }
    },
    {
      "name": "createImage",
      "action": "aws:invokeLambdaFunction",
      "inputs": {
        "FunctionName": "CreateImageLambda-{{automation:EXECUTION_ID}}",
        "Payload":  "{\"InstanceId\": \"{{InstanceId}}\", \"ExecutionId\": \"{{automation:EXECUTION_ID}}\"}"
      }
    },
    {
      "name": "deleteDocumentStack",
      "action": "aws:deleteStack",
      "inputs": {
        "StackName": "CreateImageStack{{automation:EXECUTION_ID}}"
      }
    }
  ]
}
